{% extends 'base.html.twig' %}

{% block title %}
    {# {{ 'title.product_new'|trans }} #} Add new product
{% endblock %}

{% block body %}
    <h1>{# {{ 'title.product_new'|trans }} #}Add new product</h1>
    {{ form_start(form, { method: 'POST', action: url('product_new') }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('homepage') }}" class="btn btn-link">
            {{ 'action.back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}